---
import AulaLayout from '../layouts/AulaLayout.astro';
import { AulaVirtualComponent } from '../components/AulaVirtualComponent';

const title = 'Aula Virtual | IFCET';
const description = 'Accede a tus cursos, grabaciones y materiales. Se requiere inicio de sesión.';
const image = '/favicon.webp';
const noindex = true;

// Generar un timestamp único para esta build
const buildTime = new Date().toISOString();
---

<head>
    <!-- Meta tags para control de caché -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta name="build-time" content={buildTime}>
</head>

<AulaLayout {title} {description} {image} {noindex}>
    <div id="aula-virtual-root">
        <AulaVirtualComponent client:only="react" />
    </div>
</AulaLayout>

<style>
    #aula-virtual-root {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
