---
import Layout from '../layouts/Layout.astro';
const title = 'Noticias | IFCET';
const description = 'Últimas noticias y novedades del Instituto de Formación Contable, Empresarial y Tributaria.';
const image = '/favicon.webp';
---

<Layout {title} {description} {image}>
  <section class="bg-white">
    <div class="max-w-7xl mx-auto px-4 py-16">
      <h1 class="text-2xl md:text-3xl font-extrabold text-gray-900">Noticias</h1>
      <p class="mt-2 text-gray-600">Pronto compartiremos novedades y eventos.</p>
    </div>
  </section>
</Layout>

