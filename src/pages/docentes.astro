---
import Layout from "../layouts/Layout.astro";
import { Aside } from "../components/aside.tsx";
import docentesData from "../data/docentes.json";
import docentesp from "../assets/IFCET-equipo-docente-instituto-formacion-contable-trubitaria.webp";

const title = "Docentes | IFCET";
const description =
  "Conoce a nuestro equipo de docentes expertos en SUNAT, sector empresarial y consultoría. Enfoque práctico y casos reales.";
const image = "/favicon.webp";

const docentes = docentesData.docentes;
---

<Layout {title} {description} {image}>
  <div class="w-full">
    <!-- Hero superior (por encima de los Aside) -->
    <section
      class="bg-gradient-to-b from-slate-900 via-slate-900 to-black text-white"
    >
      <div class="max-w-7xl mx-auto px-4 py-12 md:py-16">
        <div class="grid md:grid-cols-2 items-center gap-6 md:gap-10">
          <!-- Texto -->
          <div class="flex flex-col gap-4 md:gap-6">
            <h1 class="text-[clamp(1.6rem,4.5vw,3rem)] font-bold leading-tight">
              Aprende con docentes expertos del Perú
            </h1>
            <p class="text-white/80">
              Nuestro equipo está conformado por especialistas en contabilidad,
              tributación, finanzas y auditoría. Clases con casos reales,
              enfoque práctico y acompañamiento personalizado.
            </p>
            <div class="flex flex-wrap gap-3 pt-1">
              <a
                href="/cursos"
                class="px-5 py-2.5 rounded-lg text-sm font-medium bg-[#ffb403] text-black hover:scale-[1.02] transition-transform focus:outline-none focus-visible:ring-2 focus-visible:ring-[#ffb403]"
              >
                Ver cursos
              </a>
              <a
                href="/contacto#contacto"
                class="px-5 py-2.5 rounded-lg text-sm font-medium bg-white/10 text-white border border-white/30 hover:bg-white/15 hover:scale-[1.02] transition-transform focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
              >
                Contáctanos
              </a>
            </div>
          </div>

          <!-- Imagen/Placeholder -->
          <div
            class="relative h-[32vh] md:h-[46vh] flex items-center justify-center"
          >
            <div class="h-full w-full flex items-center justify-center">
              <!-- Insertar imágen aquí: Fotografía de docentes profesionales en ambiente académico, iluminación suave, espacio negativo lateral -->
              <img
                src={docentesp.src}
                alt="Docentes"
                class="w-full h-full object-contain"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Layout con Aside a los lados y contenido al centro -->
    <section
      class="grid grid-cols-1 lg:grid-cols-[1fr_4fr_1fr] grid-rows-1 min-h-screen"
    >
      <div class="hidden lg:block">
        <Aside client:load videoUrl="/videos/IFCET-Curso-Peritaje-Contable-Tributario-y-Financiero.webm" linkUrl="https://wa.link/ry63wj"/>
      </div>

      <!-- MAIN CONTENT -->
      <main
        class="p-4 sm:p-6 lg:p-8 text-white flex justify-center items-center flex-col w-full"
      >
        <div
          class="bg-[#040945] p-3 sm:p-4 rounded-lg w-fit mx-auto lg:mx-0 mt-2 sm:mt-4"
        >
          <h1
            class="text-base sm:text-lg md:text-2xl lg:text-3xl font-bold text-white text-center lg:text-left"
          >
            Conoce a nuestros docentes
          </h1>
        </div>
        <div class="w-full max-w-6xl mx-auto mt-8">
          <div class="grid grid-cols-1 gap-6 lg:gap-8">
            {
              docentes.map((docente) => (
                <div class="group relative border border-slate-700/50 rounded-2xl p-6 hover:scale-[1.02] hover:border-slate-600/70 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/20">
                  <div class="flex flex-col md:flex-row gap-6">
                    {/* <!-- Imagen del docente --> */}
                    <div class="relative flex-shrink-0">
                      <div class="w-48 h-48 md:w-56 md:h-56 rounded-xl overflow-hidden">
                        <img
                          src={docente.src}
                          alt={docente.name}
                          loading="lazy"
                          decoding="async"
                          class="w-full h-full object-cover transition-transform duration-500"
                        />
                        <div class="w-full h-full flex items-center justify-center text-slate-400">
                          <svg
                            class="w-16 h-16"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                              clip-rule="evenodd"
                            />
                          </svg>
                        </div>
                      </div>
                      {/* <!-- Badge de especialidad --> */}
                      <div class="absolute -bottom-3 left-4 bg-[#333] text-white px-4 py-1.5 rounded-full text-sm font-medium shadow-lg">
                        {docente.designation}
                      </div>
                    </div>

                     {/* <!-- Información del docente --> */}
                     <div class="flex-1 space-y-4">
                       <h3 class="text-2xl font-bold text-black group-hover:text-black/50 transition-colors duration-300">
                         {docente.name}
                       </h3>

                       <p class="text-slate-800 leading-relaxed text-base">
                         {docente.quote}
                       </p>
                       
                       {/* <!-- Botón Ver CV --> */}
                       {docente.cv && (
                         <div class="flex justify-end pt-2">
                           <a
                             href={docente.cv}
                             target="_blank"
                             class="inline-flex items-center gap-2 px-4 py-2 bg-[#ffb403] text-black rounded-lg text-sm font-medium hover:bg-[#e6a200] hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-[#ffb403] focus:ring-offset-2"
                           >
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                             </svg>
                             Ver CV
                           </a>
                         </div>
                       )}
                     </div>
                  </div>

                  {/* <!-- Efecto de brillo en hover --> */}
                  {/* <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-transparent via-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none" /> */}
                </div>
              ))
            }
          </div>

          {/* <!-- Texto adicional --> */}
          <div class="text-center mt-12 text-slate-400">
            <p class="text-lg">
              Nuestros docentes cuentan con amplia experiencia en el sector y
              están comprometidos con tu éxito profesional
            </p>
          </div>
        </div>
      </main>

      <div class="hidden lg:block">
        <Aside client:load videoUrl="/videos/IFCET-Curso-Codigo-Tributario-Peruano.webm" linkUrl="https://wa.link/20lh8p"/>
      </div>
    </section>
  </div>
</Layout>
